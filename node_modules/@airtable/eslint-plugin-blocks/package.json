{
    "name": "@airtable/eslint-plugin-blocks",
    "version": "1.0.4",
    "description": "An eslint plugin used by Airtable to develop the blocks SDK and our own blocks",
    "main": "lib/index.js",
    "directories": {
        "lib": "lib",
        "test": "__tests__"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "ci": "echo '--- eslint-plugin-blocks' && yarn run test",
        "test": "mocha 'test/**/*.js'",
        "release": "npm_config_registry=https://registry.npmjs.org/ release-it"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.2",
        "eslint": "^6.0.1",
        "mocha": "^6.1.4"
    },
    "release-it": {
        "git": {
            "tagName": "@airtable/eslint-plugin-blocks@${version}",
            "commitMessage": "Release @airtable/eslint-plugin-blocks@${version}"
        },
        "hooks": {
            "before:init": "../../bin/check-repo-for-release && yarn test"
        },
        "npm": {
            "access": "public"
        }
    }
}
